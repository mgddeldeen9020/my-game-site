<body>

<section class="hero">
  <div>
    <h1>My Awesome Game</h1>
    <p>Experience action, adventure, and fun. Download now and play!</p>

    <button onclick="startDownload()">Download Game</button>

    <div class="circle" id="circle">
      <span id="count">0</span>
    </div>
  </div>
</section>

<script>
let downloads = localStorage.getItem("downloads") || 0;
let circle = document.getElementById("circle");
let countText = document.getElementById("count");

countText.innerText = downloads;

function forceDownload(file){
  const a = document.createElement("a");
  a.href = file;
  a.setAttribute("download","");
  document.body.appendChild(a);
  a.click();
  document.body.removeChild(a);
}

function startDownload(){
  downloads++;
  localStorage.setItem("downloads", downloads);
  countText.innerText = downloads;

  circle.style.display = "flex";

  let progress = 0;
  let animate = setInterval(()=>{
    progress += 6;
    circle.style.background =
      `conic-gradient(#4da3ff ${progress}deg, #1f1f1f 0deg)`;

    if(progress >= 360){
      clearInterval(animate);
      forceDownload("app.apk");
    }
  },20);
}
</script>

</body>
